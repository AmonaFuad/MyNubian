<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
 >
<ImageView
    android:layout_width="@dimen/list_item_hight"
    android:layout_height="@dimen/list_item_hight"
    android:id="@+id/image_res"
android:layout_alignParentLeft="true"
    />

    <LinearLayout
        android:id="@+id/back_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_hight"
        android:orientation="vertical"
        android:layout_toEndOf="@id/image_res"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/nubian_ward"
            style="@style/listStyle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/default_translation"
            style="@style/listStyle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top" />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:layout_centerVertical="true"
        android:id="@+id/audio_res"
        android:src="@drawable/icon_play"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentRight="true"
    />

      </RelativeLayout>
